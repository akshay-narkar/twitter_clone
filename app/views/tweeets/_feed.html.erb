<div class="column is-half">
    <% if user_signed_in? %>
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name)%>
            </p>
        </figure>
        <div class="media-content">
            <%= render 'tweeets/form'%>
        </div>
    </article>
    <%end%>
    <% @tweeets.each do |xmas| %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <%= gravatar_image_tag(xmas.user.email, size: 64, alt: xmas.user.name)%>
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong><%= xmas.user.name %></strong><br />
                    <small><%= xmas.user.username %></small>
                    <p><%= xmas.tweeet %></p>
                </div>
                <% if user_signed_in? %>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to xmas, class: "level-item" do %>
                        <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                        <%end%>
                        <%= link_to edit_tweeet_path(xmas),class: "level-item" do %>
                        <span class="icon"><i class="fas fa-pencil-alt" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to xmas, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?"} do %>
                        <span class="icon"><i class="fas fa-trash" aria-hidden="true"></i></span>
                        <% end %>
                    </div>
                    <%end%>
                </nav>
            </div>
        </article>
    </div>

    <%end %>
</div>